apt-get install -y libboost1.46-dev libcurl4-openssl-dev python2.7 g++
wget http://curlpp.googlecode.com/files/curlpp-0.7.3.tar.gz
tar -xzf curlpp-0.7.3.tar.gz
rm curlpp-0.7.3.tar.gz
mv curlpp-0.7.3 curlpp
cd curlpp
./configure
make
make install
cd ..
rm -rf curlpp/
bash -c "echo /usr/local/lib/ > /etc/ld.so.conf.d/local.conf"
/sbin/ldconfig
wget http://pypi.python.org/packages/2.7/s/setuptools/setuptools-0.6c11-py2.7.egg
chmod +x setuptools-0.6c11-py2.7.egg
./setuptools-0.6c11-py2.7.egg
easy_install mechanize
rm setuptools-0.6c11-py2.7.egg
mkdir bin