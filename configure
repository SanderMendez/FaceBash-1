apt-get install -y libboost1.50-all-dev libcurl4-openssl-dev links2
wget http://curlpp.googlecode.com/files/curlpp-0.7.3.tar.gz
tar -xzf curlpp-0.7.3.tar.gz
rm curlpp-0.7.3.tar.gz
mv curlpp-0.7.3 curlpp
cd curlpp
./configure
make
make install
cd ..
rm -rf curlpp/
bash -c "echo /usr/local/lib/ > /etc/ld.so.conf.d/local.conf"
/sbin/ldconfig